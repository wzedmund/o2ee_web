function checkAccountForm(){

    var pass = true;
    var errhex = '#FFCCCC';
    var hex = '#FFF';
    var first_name = document.getElementById('first_name');

    if (first_name && (first_name.value == '' || first_name.value == 'First Name')) {
        pass = false;    
        first_name.style.backgroundColor = errhex;
    } else if (first_name) {
        first_name.style.backgroundColor = hex;
    }

    var last_name = document.getElementById('last_name');
    if (last_name && (last_name.value == '' || last_name.value == 'Last Name')) {
        pass = false;    
        last_name.style.backgroundColor = errhex;
    } else if (last_name) {
        last_name.style.backgroundColor = hex;
    }

    var email = document.getElementById('email');
    if (email && email.value.indexOf('@') == -1) {
        pass = false;
        email.style.backgroundColor = errhex;
    } else if (email) {
        email.style.backgroundColor = hex;
    }

    var phone = document.getElementById('phone');
    if (phone) {
        var isPhoneChar = /^[-.() \d]+$/.test(phone.value);
        var isNonAlpha = /^[^a-z]+$/i.test(phone.value);
        if (phone.value == '' || !isPhoneChar || !isNonAlpha || phone.value.length < 6) {
            pass = false;
            phone.style.backgroundColor = errhex;
        } else {
            phone.style.backgroundColor = hex;
        }
    }
    
   if (!pass) {
        alert('Please fill in all the required fields.');
   }

   return pass;

}
